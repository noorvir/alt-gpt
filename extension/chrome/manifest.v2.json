{
  "name": "AltGPT",
  "description": "Alternative UI to interface with ChatGPT",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_title": "AltGPT",
    "default_popup": "index.html"
  },
  "permissions": ["webRequest", "https://*.openai.com/", "activeTab"],
  "background": {
    "scripts": ["background/index.ts"]
  },
  "browser_action": {
    "default_icon": "logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/search*"],
      "include_globs": ["*.google.*/*"],
      "js": ["content-script.ts"]
    }
  ]
}